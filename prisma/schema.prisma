// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER")
  avatarUrl String?
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // --- RELACIONAMENTOS (OBRIGATÓRIOS PARA O LOG FUNCIONAR) ---
  logs      LogSistema[] 

  @@map("users")
}

model Lancamento {
  id        String   @id @default(uuid())
  descricao String
  valor     Float
  tipo      String   // ENTRADA ou SAIDA
  categoria String
  status    String   @default("PENDENTE")
  data      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("lancamentos")
}

model LogSistema {
  id        String   @id @default(uuid())
  acao      String   // Ex: "Aprovou acesso", "Alterou Foto"
  detalhes  String?
  
  // Relacionamento com quem fez a ação
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@map("logs_sistema")
}